{
  "ListeningPort": "5000",
  "SelfUrl": "http://url-to-tfsslackfactory:5000/",
  "SelfName": "TfsSlackFactory-dev",
  "Tfs": {
    "Server": "",
    "Username": "",
    "Password": ""
  },
  "IntegrationGroups": [
    {
      "Name": "trinity-work-item-updated",
      "EventType": "workitem.updated",
      "TfsProject": "Trinity",
      "Integrations": [
        {
          "Description": "Work item state change",
          "HookFilter": "'{State}' == 'Done' && {IsStateChanged}",
          "SlackWebHookUrl": "https://hooks.slack.com/services/...",
          "Format": "{DisplayName} {PreviousState}->{State}\n<{ParentWiUrl}|{ParentWiType} {ParentWiId}: {ParentWiTitle}> > <{WiUrl}|Task {WiId}: {WiTitle}>",
          "SlackChannel": "#test",
          "SlackUsername": "tfsbot",
          "SlackIconEmoji": ":cake:",
          "SlackColor": "#f433ff"
        }
      ]
    },
    {
      "Name": "trinity-work-item-created",
      "EventType": "workitem.created",
      "TfsProject": "Trinity",
      "Integrations": [
        {
          "Description": "bugs",
          "HookFilter": "'{WiType}' == 'Bug'",
          "SlackWebHookUrl": "https://hooks.slack.com/services/...",
          "Format": "{DisplayName} created\n<{WiUrl}|Bug {WiId}: {WiTitle}>",
          "SlackChannel": "#test",
          "SlackUsername": "tfsbot",
          "SlackIconEmoji": ":cake:",
          "SlackColor": "#f433ff"
        }
      ]
    },

    {
      "name": "trinity-build-complete",
      "EventType": "build.complete",
      "TfsProject": "Trinity",
      "Integrations": [
        {
          "Description": "Build complete Success",
          "SlackWebHookUrl": "https://hooks.slack.com/services/...",
          "Format": "Build completed: {Buildstatus}\n<{BuildUrl}|{BuildDefinition} {BuildNumber}> by {DisplayName} running for {BuildDuration}",
          "SlackChannel": "#test",
          "SlackUsername": "tfsbot",
          "SlackIconEmoji": ":cake:",
          "SlackColor": "#f433ff"
        }
      ]
    }
  ]
}
