{
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Information",
      "System": "Information",
      "Microsoft": "Information"
    }
  },
  "tfs": {
    "server": "",
    "username": "",
    "password": ""
  },
  "ListeningPort": "5000",
  "integrations": [
    {

      "name": "trinity-work-item-updated",
      "integrations": [
        {
          "Type": "workitem.updated",
          "description": "Work item state change",
          "HookFilter": "'{State}' == 'Done' && {IsStateChanged}",
          "SlackWebHookUrl": "https://hooks.slack.com/services/...",
          "Format": "{DisplayName} {PreviousState}->{State}\n<{ParentWiUrl}|{ParentWiType} {ParentWiId}: {ParentWiTitle}> > <{WiUrl}|Task {WiId}: {WiTitle}>",
          "SlackChannel": "#test",
          "SlackUsername": "tfsbot",
          "SlackIconEmoji": ":cake:",
          "SlackColor": "#f433ff"
        },
      ]
    },
    {
      "name": "trinity-work-item-created",
      "integrations": [
        {
          "Type": "work-item",
          "description": "bugs",
          "WhiteListQuery": "SELECT [System.Id] FROM WorkItems WHERE [System.WorkItemType] = 'Bug' AND [System.Id] = @wiId",
          "SlackWebHookUrl": "https://hooks.slack.com/services/...",
          "Format": "{DisplayName} created\n<{WiUrl}|Bug {WiId}: {WiTitle}>"
        }
      ]

    }
  ]
}
